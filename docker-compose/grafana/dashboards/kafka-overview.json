{
    "dashboard": {
      "title": "Kafka Overview",
      "panels": [
        {
          "id": 1,
          "title": "Messages Received",
          "type": "graph",
          "targets": [
            {
              "expr": "rate(kafka_messages_received_total[1m])"
            }
          ]
        },
        {
          "id": 2,
          "title": "Messages Processed",
          "type": "graph",
          "targets": [
            {
              "expr": "rate(kafka_messages_processed_total[1m])"
            }
          ]
        },
        {
          "id": 3,
          "title": "Consumer Lag",
          "type": "graph",
          "targets": [
            {
              "expr": "kafka_consumergroup_lag"
            }
          ]
        }
      ]
    }
  }